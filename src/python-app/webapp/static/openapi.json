{
  "openapi": "3.0.0",
  "info": {
    "title": "Weather API",
    "version": "1.0.0",
    "description": "API for querying weather data by country, city, and month."
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Redirect to /docs",
        "responses": {
          "302": { "description": "Redirect to documentation" }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health check endpoint",
        "responses": {
          "200": { "description": "OK" }
        }
      }
    },
    "/countries": {
      "get": {
        "summary": "List all countries",
        "responses": {
          "200": {
            "description": "A list of country names",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        }
      }
    },
    "/countries/{country}": {
      "get": {
        "summary": "List all cities in a country",
        "parameters": [
          {
            "name": "country",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of city names",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "type": "string" } }
              }
            }
          },
          "404": { "description": "Country not found" }
        }
      }
    },
    "/docs": {
      "get": {
        "summary": "OpenAPI documentation endpoint",
        "responses": {
          "200": {
            "description": "OpenAPI documentation as JSON",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    }
  }
}
